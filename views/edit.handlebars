<div class="container form_container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <h4 class="text-center mb-3">請修改你的支出</h4>
      <form action="/records/{{record.id}}/edit?_method=PUT" method="POST">
        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text bg-light" id="">
                名稱
              </span>
            </div>
            <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name"
              value="{{record.name}}">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text bg-light" id="">
                日期
              </span>
            </div>
            <input type="date" class="form-control" id="name_en" placeholder="Enter Date" name="name_en"
              value="{{record.date}}">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text bg-light" id="">
                類別
              </span>
            </div>
            <select class="custom-select" id="inputGroupSelect01">
              <option selected>選取...</option>
              <option value="1">家居物業</option>
              <option value="2">交通出行</option>
              <option value="3">休閒娛樂</option>
              <option value="4">餐飲食品</option>
              <option value="5">其他</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text bg-light" id="">
                金額
              </span>
            </div>
            <input type="text" class="form-control" id="photo-link" placeholder="Link to Photo" name="image"
              value="{{record.price}}">
          </div>
        </div>

        <button type="submit" class="btn btn-info float-left mt-2">修改</button>
      </form>

      <form action="/records/{{record.id}}/delete" method="POST">
        <button type="submit" class="btn btn-danger delete_button float-right">刪除</button>
      </form>

    </div>
  </div>
</div>